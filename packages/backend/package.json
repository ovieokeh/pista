{
  "name": "backend",
  "version": "1.0.0",
  "description": "The backend for Pista",
  "main": "index.js",
  "scripts": {
    "build": "rm -rf ./dist && npm run migrate && tsc",
    "start": "node ./dist/server.js",
    "dev": "export NODE_ENV=development && ts-node-dev --respawn --transpileOnly --ignore-watch node_modules ./src/server.ts",
    "migrate": "$(npm bin)/sequelize db:migrate",
    "migrate:undo": "$(npm bin)/sequelize db:migrate:undo",
    "test": "export NODE_ENV=test && nyc mocha --exit -r ts-node/register src/**/*.spec.ts",
    "coverage": "nyc report --reporter=lcov"
  },
  "keywords": [
    "node.js",
    "postgresql",
    "jwt"
  ],
  "author": "Ovie Okeh",
  "license": "Apache-2.0",
  "dependencies": {
    "@babel/polyfill": "^7.2.5",
    "bcrypt": "^3.0.4",
    "body-parser": "^1.18.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^7.0.0",
    "express": "^4.17.1",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^7.11.0",
    "sequelize": "^5.8.12",
    "sequelize-cli": "^5.5.0",
    "throng": "^4.0.0",
    "ts-node-dev": "^1.0.0-pre.40"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-proposal-class-properties": "^7.3.4",
    "@babel/plugin-proposal-object-rest-spread": "^7.3.4",
    "@babel/preset-env": "^7.3.4",
    "@babel/register": "^7.4.0",
    "@types/bcrypt": "^3.0.0",
    "@types/bluebird": "^3.5.27",
    "@types/chai": "^4.1.7",
    "@types/compression": "0.0.36",
    "@types/cors": "^2.8.5",
    "@types/dotenv": "^6.1.1",
    "@types/expect.js": "^0.3.29",
    "@types/express": "^4.17.0",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mocha": "^5.2.7",
    "@types/sequelize": "^4.28.3",
    "@types/throng": "^4.0.2",
    "@types/validator": "^10.11.1",
    "babel-eslint": "^10.0.1",
    "chai": "^4.2.0",
    "chai-http": "^4.2.1",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.2.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.1.0",
    "expect.js": "^0.3.1",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier": "^1.17.1",
    "ts-node": "^8.3.0"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "lcov",
      "text"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
